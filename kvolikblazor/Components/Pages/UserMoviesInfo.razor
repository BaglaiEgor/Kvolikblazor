@page "/movies/{id:int}"
@using kvolikblazor.Model
@inject HttpClient Http
@inject NavigationManager NavigationManager

<style>
    .movie-details-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
    }

    .movie-image-container {
        margin-right: 20px;
    }

    h3 {
        color: #3498db;
        margin-bottom: 20px;
        width: 100%;
        text-align: center;
    }

    h4 {
        color: #333;
        margin-bottom: 10px;
    }

    img {
        max-width: 200px;
        height: auto;
        border: 2px solid #3498db;
        border-radius: 4px;
        padding: 5px;
    }

    p {
        color: #555;
        margin-bottom: 8px;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: none;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }
</style>

<div class="movie-details-container">
    <div class="movie-image-container">
        @if (movie != null)
        {
                <img src="@movie.ImageUrl" alt="@movie.Title" />
        }
    </div>
    <div>
        <h3>Подробная информация о фильме</h3>
        @if (movie == null)
        {
                <p><em>Загрузка...</em></p>
        }
        else
        {
                <div>
                    <h4>@movie.Title</h4>
                    <p><strong>Описание:</strong> @movie.Description</p>
                    <p><strong>Жанр:</strong> @movie.Genre</p>
                    <p><strong>Дата выхода:</strong> @movie.ReleaseDate.ToShortDateString()</p>
                    <p><strong>Рейтинг:</strong> @movie.Rating</p>
                    <NavLink class="btn btn-primary" href="/movies">Назад к списку</NavLink>
                </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Movies? movie;

    protected override async Task OnInitializedAsync()
    {
        movie = await Http.GetFromJsonAsync<Movies>($"https://localhost:7294/api/movie/{Id}");

    }
}